---
interface Props{
    description: string;
    start: string;
    end: string;
    company: string;
    title: string;
    evenodd: number;
}
const {title, description, start, end, company, evenodd} = Astro.props;
---


<li>
    <div class="timeline-middle">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-6 w-6"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" /></svg>
    </div>
    <div class={evenodd == 1 ? `timeline-start md:text-end mb-10` : `timeline-end mb-10`}>
        {
            end.length === 0 ? (<span class="font-mono italic">{start}</span>) :
            (<time class="font-mono italic">{start} - {end}</time>)

        }     
        {
            company.length === 0 ? (<div class="text-lg font-black text-blue-600">{title}</div>) :
            (<div class="text-lg font-black text-blue-600">{title} - {company}</div>)

        }   
        <span class="text-gray-200">{description}</span>
    </div>
    <hr class="bg-blue-600"/>
</li>
---
import Mail from "./icons/Mail.astro";
---

<section class="p-5 lg:p-0 py-8 lg:w-[52rem] mx-auto max-w-screen-xl">
    <h1 class="text-3xl text-wrap font-extrabold text-gray-200 inline-flex items-center"><span class="pr-2"><Mail /></span>Contact me</h1>
    <div class="mt-5">
        <form class="mx-auto"
        action="https://formspree.io/f/xyyrkkdn"
        method="POST">
            <div class="flex flex-col mb-4">
                <label for="default-input" class="block mb-2 text-sm font-medium text-white">Email</label>
                <input type="email" name="email" placeholder="hireme@please.com" id="default-input" class="border  text-sm rounded-lg  block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div class="flex flex-col mb-4">

                <label for="message" class="block mb-2 text-sm font-medium text-white">Your message</label>
                <textarea id="message" name="message" rows="4" class="block p-2.5 w-full text-sm rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" placeholder="Feel free to drop me a message. I'd love to hear from you!"></textarea>
                
            </div>
            <div class="flex justify-end">
            <button type="submit" class="px-5 py-2.5 text-sm font-medium text-white inline-flex items-center rounded-lg text-center bg-blue-600 hover:bg-blue-700 focus:ring-blue-800">
                <svg class="w-3.5 h-3.5 text-white me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z"/>
                <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z"/>
                </svg>
                Send
                </button>
            </div>
        </form>
     
    </div>
</section>